	# 	APK='curl' # ALPINE
	# 	APT='curl' # UBUNTU
	# 	AUR='curl' # ARCH
	# 	BREW='curl'
	# 	EMERGE='net-misc/curl' # GENTOO
	# 	NIX='nixpkgs.curl'
	# 	RPM='curl'   # FEDORA
	# 	URPMI='curl' # MAGEIA
	# 	WINGET='cURL'
	# 	XBPS='curl'   # VOID
	# 	ZYPPER='curl' # SUSE
	# )
	# setup-util "${options[@]}"
)

# fire if invoked standalone
if test "$0" = "${BASH_SOURCE[0]}"; then
	setup-util-cabal "$@"
fi
